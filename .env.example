# ===========================================
# 環境変数設定ファイル（テンプレート）
# ===========================================
# このファイルを .env にコピーして使用してください
# cp .env.example .env

# -------------------------------------------
# アプリケーション設定
# -------------------------------------------
APP_NAME=TSUNAGARU
APP_ENV=development
APP_VERSION=0.0.1

# ヘッダー表示テキスト
APP_HEADER_TITLE=TSUNAGARU
APP_HEADER_SUBTITLE=デジタルサイネージ管理システム

# -------------------------------------------
# 開発用アカウント情報
# -------------------------------------------
# 本番環境では削除または変更してください
DEV_ADMIN_EMAIL=admin@example.com
DEV_ADMIN_PASSWORD=admin123
DEV_ADMIN_NAME=管理者

DEV_USER_EMAIL=user@example.com
DEV_USER_PASSWORD=user123
DEV_USER_NAME=一般ユーザー

# -------------------------------------------
# データベース設定
# -------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=tsunagaru
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tsunagaru

# -------------------------------------------
# バックエンド設定
# -------------------------------------------
BACKEND_PORT=3001
BACKEND_HOST=0.0.0.0
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=524288000
CORS_ORIGIN=http://localhost:5173

# -------------------------------------------
# フロントエンド設定
# -------------------------------------------
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3001

# -------------------------------------------
# 外部サービス設定
# -------------------------------------------
WEATHER_API_URL=https://jma-proxy.onrender.com
CSV_RENDERER_API_URL=https://csv-renderer.onrender.com

# -------------------------------------------
# ライブ配信設定（nginx-rtmp）
# -------------------------------------------
RTMP_PORT=1935
HLS_PORT=8080
# LAN内公開の場合は、ローカルIPアドレスを設定してください
# 例: LAN_HOST=192.168.1.100
LAN_HOST=localhost
RTMP_URL=rtmp://${LAN_HOST}:${RTMP_PORT}/live
HLS_BASE_URL=http://${LAN_HOST}:${HLS_PORT}/hls
